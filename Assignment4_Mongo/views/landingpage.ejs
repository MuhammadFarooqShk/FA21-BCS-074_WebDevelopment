<div class="container p-10">
  <% 
    var itemsPerPage = 3;
    var pageCount = Math.ceil(items.length / itemsPerPage);
    for (var i = 0; i < pageCount; i++) { 
      var startIndex = i * itemsPerPage;
      var endIndex = Math.min((i + 1) * itemsPerPage, items.length);
  %>
    <% if (i > 0) { %>
      <div class="pagination-page d-none" data-page="<%= i %>">
    <% } else { %>
      <div class="pagination-page" data-page="<%= i %>">
    <% } %>
      <div class="row">
        <% for (var j = startIndex; j < endIndex; j++) { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="<%= items[j].img %>" style="height: 200px; object-fit: cover;" alt="Tour Image">
              <div class="card-body">
                <h5 class="card-title"><%= items[j].source %> to <%= items[j].destination %></h5>
                <p class="card-text"><%= items[j].description %></p>
                <p class="card-text text-primary font-weight-bold">$<%= items[j].price %></p>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>
</div>

<nav aria-label="Page navigation" style="display: flex;justify-content: center;align-items: center;">
  <ul class="pagination">
    <% for (var k = 0; k < pageCount; k++) { %>
      <li class="page-item <%= k === 0 ? 'active' : '' %>"><a class="page-link" href="/product" data-page="<%= k %>"><%= k + 1 %></a></li>
    <% } %>
  </ul>
</nav>



