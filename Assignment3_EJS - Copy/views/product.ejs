<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Featured Destinations</title>
    <link rel="stylesheet" href="jqstyles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .card {
            height: 100%;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }

        .card-link:hover {
            cursor: pointer;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body>
    <section id="featured-destinations" class="featured-destinations container section-padding bg-#FEF8F9 mb-5">
        <h2 class="section-title">Featured Destinations</h2>
        <div class="row section-padding bg-#FEF8F9 mb-5">
            <% destinations.forEach((destination, index) => { %>
                <div class="col-md-4">
                    <div class="card">
                        <img src="/images/destinations/<%= destination.image %>" class="card-img-top" alt="<%= destination.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= destination.name %></h5>
                            <p class="card-text"><%= destination.description %></p>
                            <a href="#" class="mt-2 btn btn-lg btn-outline-dark">Learn More</a>
                        </div>
                    </div>
                </div>
                <% if ((index + 1) % 3 === 0 && index + 1 < destinations.length) { %>
                    </div>
                    <div class="row section-padding bg-#FEF8F9 mb-5">
                <% } %>
            <% }) %>
        </div>
    </section>
</body>
</html>
